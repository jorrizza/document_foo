<fieldset>
  <div class="clearfix">
    <label for="username">Username</label>
    <div class="input">
      <input class="xlarge" id="username" name="username"
             type="text" value="<%= h @user.username %>">
    </div>
  </div>
  <div class="clearfix">
    <label for="password">Password</label>
    <div class="input">
      <input class="xlarge" id="password" name="password"
             type="password"<%= ' value="stupiddefault"' unless @action == :new %>>
    </div>
  </div>
  <div class="clearfix">
    <label for="password_confirmation">Again</label>
    <div class="input">
      <input class="xlarge" id="password_confirmation"
             name="password_confirmation" type="password"
             <%= ' value="stupiddefault"' unless @action == :new %>>
    </div>
  </div>
  <div class="clearfix">
    <label for="role">Role</label>
    <div class="input">
      <select class="xlarge" id="role" name="role">
        <% User::ROLES.each do |role| %>
        <option<%= " selected" if @user.role == role %>><%= role %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="clearfix accountant">
    <label for="accountant">Accountant</label>
    <div class="input">
      <select class="xlarge" id="accountant" name="accountant">
        <option value="">No accountant</option>
        <% @accountants.each do |acc| %>
        <option<%= " selected" if @user.accountant && @user.accountant.username == acc %>><%= h acc %></option>
        <% end %>
      </select>
    </div>
  </div>
</fieldset>
